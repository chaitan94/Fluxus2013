<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.IITI.fluxus13"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        
        <activity
            android:name="com.IITI.fluxus13.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.IITI.fluxus13.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.IITI.fluxus13.Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.IITI.fluxus13.HOME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.IITI.fluxus13.About"
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.IITI.fluxus13.ABOUT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.IITI.fluxus13.Splash"
            android:theme="@android:style/Theme.Translucent"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.IITI.fluxus13.EventDialog"
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>